{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/server",
    "noEmit": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node"],
    "incremental": true
  },
  "include": ["server/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
